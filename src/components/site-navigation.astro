---
import SiteHeader from "./site-header.astro";
//import { SiteSidebar } from "./site-sidebar.astro";
import Logo from "./logo.astro";
---

<header
  class="contents lg:pointer-events-none lg:fixed lg:inset-0 lg:z-40 lg:flex"
>
  <div
    class="scrollbar contents lg:pointer-events-auto lg:block lg:w-72 lg:overflow-y-auto lg:border-r lg:border-zinc-900/10 lg:px-6 lg:pb-8 lg:pt-4 lg:dark:border-white/10 xl:w-80"
  >
    <div class="hidden lg:flex">
      <Logo />
    </div>
    <SiteHeader client:load />
    <!-- <SiteSidebar className="hidden lg:mt-10 lg:block" /> -->
  </div>
</header>
