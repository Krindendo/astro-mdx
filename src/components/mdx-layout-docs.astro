---
import DocsPageHeader from "./docs-page-header.astro";
import {
  setSections,
  setSectionIds,
  setVisibleSections,
  Item,
} from "../stores/site";

interface DocsConfig {
  title: string;
  description: string;
  toc: Item[];
}

interface Props {
  toc: Item[];
  title: string;
  description: string;
}

const { toc, title, description } = Astro.props;

setSections({ items: toc });
setSectionIds({ items: toc });
setVisibleSections([]);

/*
  items: [
    { url: '#usestate', title: 'useState', items: [Array] },
    { url: '#usereducer', title: 'useReducer', items: [Array] },
    { url: '#usestate-vs-usereducer', title: 'useState vs useReducer' }
  ]
*/
---

<div class="container flex-1">
  <main class="relative py-6 lg:gap-10 lg:py-8 xl:grid">
    <div class="mx-auto w-full min-w-0">
      <DocsPageHeader heading={title} text={description} />
      <div class="pb-12 pt-8"><slot /></div>
    </div>
  </main>
</div>
