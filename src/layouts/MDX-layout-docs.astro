---
import DocsPageHeader from "../components/docs-page-header.astro";
import { injectToc, Item } from "../stores/site";

interface Props {
  toc: Item[];
  title: string;
  description: string;
}

const { title, description, toc } = Astro.props;
console.log("toc", toc);

injectToc(toc);
---

<div class="container flex-1">
  <main class="relative py-6 lg:gap-10 lg:py-8 xl:grid">
    <div class="mx-auto w-full min-w-0">
      <DocsPageHeader heading={title} text={description} />
      <div class="pb-12 pt-8"><slot /></div>
    </div>
  </main>
</div>
